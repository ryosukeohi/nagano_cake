<h4>注文情報入力</h4>

<%= form_with model: @order, local:true do |f| %>
 <p>支払方法</p>
 <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
 <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

 <%= f.radio_button :payment_method, Order.payment_methods.key(2) %>
 <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>

 <p>お届け先</p>
 <%= f.radio_button :address, "0" %>
 <%= f.label :address, "ご自身の住所" %>
 〒<%= current_customer.addresses.postal_code %>  <%= current_customer.addresses.address %>
   <%= current_customer.name %>
 
 <%= f.radio_button :address, "1" %>
 <%= f.label :address, "登録済み住所から選択" %>
 <%= f.select :address, options_from_collection_for_select(Address.all, :id, :full_address) %>
 
 <%= f.radio_button :address, "2" %>
 <%= f.label :address, "新しいお届け先" %>
 
<% end %>