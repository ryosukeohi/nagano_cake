<h4>注文情報入力</h4>

<%= form_with model: @order, url: orders_confirm_path, local:true do |f| %>
 <p>支払方法</p>
 <%= f.radio_button :payment, Order.payments.key(1) %>
 <%= f.label :payment, Order.payments_i18n[:credit_card] %>

 <%= f.radio_button :payment, Order.payments.key(2) %>
 <%= f.label :payment, Order.payments_i18n[:transfer]%>

 <p>お届け先</p>
 <div class="field">
   <%= f.radio_button :address, "0" %>
   <%= f.label :address, "ご自身の住所" %></br>
   〒<%= current_customer.postal_code %>  <%= current_customer.address %></br>
     <%= current_customer.last_name %><%= current_customer.first_name %>
 </div>

 <div class="field">
    <%= f.radio_button :address, "1" %>
    <%= f.label :address, "登録済み住所から選択" %>
    <%= f.select :address, options_from_collection_for_select(Address.all, :id, :full_address) %>
 </div>

 <div class="field">
   <%= f.radio_button :address, "2" %>
   <%= f.label :address, "新しいお届け先" %>
 </div>

 <table>
  <tbody>
  <tr>
   <th><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></th>
   <td><%= f.text_field :postal_code %></td>
  </tr>
  <tr>
   <th><%= f.label :address, "住所" %></th>
   <td><%= f.text_field :address %></td>
  </tr>
  <tr>
   <th><%= f.label :name, "宛名" %></th>
   <td><%= f.text_field :name %></td>
  </tr>
  </tbody>
 </table>
 <%= f.submit "確認画面へ進む" %>


<% end %>