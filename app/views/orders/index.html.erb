<div class="container">
<p>注文履歴一覧</p>

<table class="table">
  <thead>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>注文詳細</th>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td>
        <%= order.postal_code %></br>
        <%= order.address %></br>
        <%= order.name %>
      </td>
      <td>
        <% order.order_details.each do |detail| %>
         <%= detail.item.name %></br>
        <% end %>
      </td>
      <td><%= order.pay %>円</td>
      <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>