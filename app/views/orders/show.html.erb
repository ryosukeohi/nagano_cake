<div class="container">
<h4>注文履歴詳細</h4>

<h3>注文情報</h3>
<table class="table-bordered">
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>
      〒<%= @order.postal_code %></br>
        <%= @order.address %></br>
        <%= @order.name %>
    </td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= Order.payments_i18n[@order.payment.to_s] %></td>
  </tr>
</table>

<h3>注文内容</h3>
<table class="table-bordered col-6">
  <thead>
    <tr>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
  <% @total = 0 %>
  <% @order.order_details.each do |detail| %>
  <% @total += detail.mid %>
  <tr>
    <td><%= detail.item.name %></td>
    <td><%= detail.item.with_tax_price %></td>
    <td><%= detail.quantity %></td>
    <td><%= detail.mid %></td>
  </tr>
  <% end %>
  </tbody>
</table>

<h3>請求情報</h3>
<table class="table-striped col-4">
   <tr>
     <th>商品合計</th>
     <th><%= @total %></th>
   </tr>
   <tr>
     <th>配送料</th>
     <td><%= @order.postage %></td>
   </tr>
   <tr>
     <th>ご請求額</th>
     <td><%= @order.pay %></td>
   </tr>
</table>
</div>