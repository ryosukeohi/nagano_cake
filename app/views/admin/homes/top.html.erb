<div class="container">
<h1>注文履歴一覧</h1>

<table class="table">
  <thead>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to admin_order_path(order.id) do %>
          <%= order.created_at %>
          <% end %>
        </td>
        <td><%= order.name %></td>
        <td>
          <% total = 0 %>
          <% order.order_details.each do |detail| %>
          <% total += detail.quantity %>
          <% end %>
          <%= total %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @orders %>
</div>