<h1>注文履歴一覧</h1>

<table>
  <thead>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.name %></td>
        <td>
          <% total = 0 %>
          <% order.order_details.each do |detail| %>
          <% total += detail.quantity %>
          <% end %>
          <%= total %>
        </td>
      </tr>
    <% end %>
    <%= paginate @orders %>
  </tbody>
</table>