<div class="container">
<h4>ジャンル一覧・追加</h4>

<%= form_with model: [:admin, @genre], local:true do |f| %>
<span>ジャンル名</span>
<%= f.text_field :name %>
<%= f.submit '新規投稿',class: "btn btn-primary" %>
<% end %>

<table class="table">
  <thead>
    <tr>
    <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td> <%= genre.name %></td>
        <td><%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>