<h1>ジャンル一覧・追加</h1>

<%= form_with model: [:admin, @genre], local:true do |f| %>
<%= f.text_field :name %>
<%= f.submit '新規投稿' %>
<% end %>

<table>
  <thead>
    <tr>
    <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
   <tr>
     <td>
    　<%= genre.name %>
    　<% end %>
     </td>
   </tr>
  </tbody>
</table>