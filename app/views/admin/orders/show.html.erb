<h4>注文履歴詳細</h4>

<table>
  <tr>
    <th>購入者</th>
    <td><%= @order.customer.first_name + @order.customer.last_name %></td>
  </tr>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td><%= @order.address %></br>
        <%= @order.name %>
    </td>
  </tr>
</table>

<table>
  <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
  </thead>
  <tbody>
    <% @total = 0 %>
    <% @order.order_details.each do |detail| %>
    <% @total += detail.mid %>
    <tr>
      <td><%= detail.item.name %></td>
      <td><%= detail.item.with_tax_price %></td>
      <td><%= detail.quantity %></td>
      <td><%= detail.mid %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<table>
   <tr>
     <th>商品合計</th>
     <th><%= @total %></th>
   </tr>
   <tr>
     <th>送料</th>
     <td><%= @order.postage %></td>
   </tr>
   <tr>
     <th>請求金額合計</th>
     <td><%= @order.pay %></td>
   </tr>
</table>