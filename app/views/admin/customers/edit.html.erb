<h2><%= @customer.first_name + @customer.last_name %>さんの会員情報編集</h2>

<%= form_with model: [:admin, @customer], local:true do |f| %>
<table>
  <tr>
    <th>会員ID</th>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <th>氏名</th>
    <td><%=f.text_field :last_name %></td>
    <td><%=f.text_field :first_name %></td>
  </tr>
  <tr>
    <th>フリガナ</th>
    <td><%=f.text_field :last_name_kana %></td>
    <td><%=f.text_field :first_name_kana %></td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= f.text_field :postal_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= f.text_field :telephone_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr>
    <td>
      <%= f.radio_button :is_active, "true" %>
      <%= f.label :is_active, "有効" %>
    </td>
    <td>
      <%= f.radio_button :is_active, "false" %>
      <%= f.label :is_active, "退会" %>
    </td>
  </tr>
</table>
<%= f.submit '変更を保存' %>
<% end %>