<p>商品新規登録</p>

<%= form_with model: [:admin, @item], local:true do |f| %>
 <div>
   <label>商品画像</label>
 <%= f.attachment_field :image %>
 </div>
 
 <div>
   <label>商品名</label>
   <%= f.text_field :name %>
 </div>
 
 <div>
   <label>商品説明</label>
   <%= f.text_area :introduction %>
 </div>
 
 <div>
   <label>税抜価格</label>
   <%= f.text_field :price %>円
 </div>
 
 <div>
  <%= f.submit '新規登録' %>
 </div>
<% end %>