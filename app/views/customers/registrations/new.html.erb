<h2>Sign up</h2>

<%= form_with model: @customer, url: registration_path, local:true do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <span>名前</span>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <span>フリガナ</span>
    <%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <span> 郵便番号</span>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
    <span> 住所</span>
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <span> 電話番号</span>
    <%= f.text_field :telephone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
