<div class="container">
<h4>会員情報編集</h4>
<div class="row justify-content-center" >
<%= form_with model: @customer, url: customers_update_path, local:true do |f| %>

  <div class="field">
    <label>名前</label>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <label>フリガナ</label>
    <%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>

  <div class="field">
    <label> 郵便番号</label>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
    <label> 住所</label>
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <label> 電話番号</label>
    <%= f.text_field :telephone_number, autofocus: true %>
  </div>

  <div class="field">
    <label>メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存", class: "btn btn-primary m-2" %>
  </div>
<% end %>
</div>

<div class="row justify-content-center">
<%= link_to "退会する", customers_confirm_path, class: "btn btn-danger" %>
</div>
</div>