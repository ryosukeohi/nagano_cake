<h2>会員情報編集</h2>

<%= form_with model: @customer, url: customers_update_path, local:true do |f| %>

  <div class="field">
    <span>名前</span>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <span>フリガナ</span>
    <%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <span> 郵便番号</span>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
    <span> 住所</span>
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <span> 電話番号</span>
    <%= f.text_field :telephone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <span>メールアドレス</span>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存" %>
  </div>
<% end %>

<%= link_to "退会する", customers_confirm_path %>