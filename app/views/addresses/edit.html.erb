<div class="container" >

<h4>配送先編集</h4>
<div class="row　justify-content-center" >
<div class="form-horizontal" role="form">

<%= form_with model: @address, local:true do |f| %>


 <div class="row mb-3">
  <label class="col-md-4 col-form-label text-right">郵便番号(ハイフンなし)</label>
  <div class="col-md-8">
   <%= f.text_field :postal_code %>
  </div>
 </div>

 <div class="row mb-3">
  <label class="col-md-4 col-form-label text-right">住所</label>
  <div class="col-md-8">
   <%= f.text_area :address %>
  </div>
 </div>


 <div class="row mb-3">
  <label class="col-sm-4 col-form-label text-right">宛名</label>
  <div class="col-md-8">
   <%= f.text_field :name %>
  </div>
 </div>

 <div class="text-center">
  <%= f.submit '変更を保存', class: "btn btn-primary" %>
 </div>
<% end %>
</div>
</div>
</div>