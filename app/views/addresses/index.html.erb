<h4>配送先一覧/登録</h4>
<table>
<%= form_with model: @address, local:true do |f| %>
<tr>
  <th>郵便番号(ハイフンなし)</th>
  <td><%= f.text_field :postal_code %></td>
</tr>
<tr>
  <th>住所</th>
  <td><%= f.text_field :address %></td>
</tr>
<tr>
  <th>宛名</th>
  <td><%= f.text_field :name %></td>
  <td><%=f.submit '新規登録' %></td>
</tr>
<% end %>
</table>

<table>
  <thead>
    <tr>
      <td>郵便番号</td>
      <td>住所</td>
      <td>宛名</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td>
        <%= link_to "編集する", addresses_edit_path(address) %>
        <%= link_to "削除する", "/addresses/#{address.id}", method: :delete, "data-confirm" => "Are you sure?" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>