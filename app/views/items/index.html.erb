<div class="container">
<h1>商品一覧</h1>(全<%= @count %>件)

<div class="row flex-wrap">
<% @items.each do |item| %>
<div class="col-4">
<%= link_to item_path(item.id) do %>
　<%= attachment_image_tag item, :image, :fill, 60, 60 %></br>
<% end %>
  商品名 <%= item.name %></br>
  ¥<%= item.price %>
</div>
  <% end %>
<%= paginate @items %>
</div>
</div>